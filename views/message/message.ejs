    <link rel="stylesheet" href="/css/message.css" />
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <div class="hidden">
      <p>
        THIS SECTION, INCLUDING SETTINGS, IS AVAILABLE ONLY IN DESKTOP MODE. |
        Sorry :-)
      </p>
    </div>
    <div class="list">
      <div class="header">
        <span>Tiger247</span>
        <i class="fa-regular fa-pen-to-square"></i>
      </div>
      <div class="chat-type">
        <div class="type-button primary"><span>Primary</span></div>
        <div class="type-button general"><span>General</span></div>
        <div class="type-button request"><span>Request</span></div>
      </div>
      <div class="follower-list">
        <div class="follower-item" data-user-id="cat">
          <img
            src="https://images.unsplash.com/photo-1645307472863-131c304b7bfc?q=80&w=2860&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="Img"
          />
          <div class="follower-name">
            <span class="name">Cat</span>
            <div class="last-msg">
              <span>bye &ensp; &#183; &ensp; 12hr</span>
            </div>
          </div>
        </div>
        <div class="follower-item" data-user-id="duck">
          <img
            style="width: 3.7rem; height: 3.2rem"
            src="https://images.unsplash.com/photo-1543874461-a176cc724ba4?q=80&w=2860&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="Img"
          />
          <div class="follower-name">
            <span class="name">Duck</span>
            <div class="last-msg">
              <span>bye &ensp; &#183; &ensp; 12hr</span>
            </div>
          </div>
        </div>
        <div class="follower-item" data-user-id="dog">
          <img
            src="https://images.unsplash.com/photo-1493916665398-143bdeabe500?q=80&w=2874&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            alt="Img"
          />
          <div class="follower-name">
            <span class="name">Dog</span>
            <div class="last-msg">
              <span>bye, &ensp; &#183; &ensp; 12hr</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="message-section right-side">
      <div class="msg-icon" style="text-align: center">
        <i class="fa-brands fa-facebook-messenger"></i>
      </div>
      <div style="text-align: center" class="text1">
        <span>Your messages</span>
      </div>
      <div style="text-align: center" class="text2">
        <span>Send a message to start a chat.</span>
      </div>
      <div style="text-align: center" class="send-button">
        <a href=""><button name="Send message">Send message</button></a>
      </div>
    </div>
    <script src="/js/message.js"></script>
  </body>
</html>
